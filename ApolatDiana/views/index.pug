doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css' integrity='sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2' crossorigin='anonymous')
  link(href='Index.css')
.container(style='margin: 20px solid ')
  form.needs-validation(  action='/data' method='POST' style='border: 2px solid grey; margin:30px'  name='testRegForm' onsubmit='return testForm();')
    .form-row
      .col-md-5
        img(src='pictures/uganda-flag-part.png' alt='' style='height: 100px; ')
      .col-md-3
        img(src='pictures/uganda-coat_of_arms.png' alt='' style='height: 100px; ')
      .col-md-4
        img(src='pictures/uganda-flag-part.png' alt='' style='height: 100px; ')  
    .form-row
      .col-md-12  
        h4.text-center Ministry of Health
        h1.b.text-center Covid-19(Corrona Virus)
        h5.text-center Virus testing Form
    br
    span#regmessage.p-3.mb-12.bg-success.text-white.text-center
    .form-row
      .col-md-5.mb-3.ml-2
        label(for='validationCustom01') Surname
        input#validationCustom01.form-control(type='text'  name='surname')
        span#surnameerror
        .valid-feedback
      .col-md-5.mb-3.mr-1
        label(for='validationCustom02') Given name
        input#validationCustom02.form-control(type='text' name='givenName')
        span#givenNameerror
        .valid-feedback
    .form-row
      .col-md-5.mb-3.ml-2
        label(for='validationCustom01') Date of Birth
        input#validationCustom01.form-control(type='date' name='dateOfDirth')
        span#dateOfBirtherror
        .valid-feedback
      .col-md-5.mb-3.mr-1
        label(for='validationCustom02') Place of residence
        input#validationCustom02.form-control(type='text' name='placeOfResidence')
        span#residenceerror(style='background-color:green')
        .valid-feedback
    .form-row
      .col-md-5.mb-3.ml-2
        label(for='validationCustom01') Occupation
        input#validationCustom01.form-control(type='text' name='occupation')
        span#occupationerror
        .valid-feedback
      .col-md-5.mb-3.mr-1
        label(for='validationCustom02') Nationality
        input#validationCustom02.form-control(type='text' name='nationality')
        span#nationalityerror
        .valid-feedback
    .col-md-10.mr-1
      label(for='validationCustom02') Gender
      hr
      label.form-check.form-check-inline
          input.form-check-input(type="radio" name="gender" value="female" checked id="female")
          span.form-check-label Female 
      label.form-check.form-check-inline
          input.form-check-input(type="radio" name="gender" value="male" checked id="male")
          span.form-check-label(style=' float:right') Male
          span#gendererror
    .col-md-11.mb-3.mr-1
      select.form-control(name="category" id="category")
          option(value="type") --Select Category--
          option(value="returnee") Returnee
          option(value="contact") Contact
          option(value="alert") Alert
          option(value="volunteer") Volunteer 
          span#categoryerror
    button.btn.btn-primary(type='submit' style='float:right') Register
script(src='validation.js')      